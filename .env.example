# Environment Variables for Tariff Radar

# Database
POSTGRES_USER=tariff_user
POSTGRES_PASSWORD=secure_password_123
POSTGRES_DB=tariff_radar
DATABASE_URL=postgresql://tariff_user:secure_password_123@postgres:5432/tariff_radar

# Redis (Celery broker)
REDIS_URL=redis://redis:6379/0

# Qdrant Vector Store
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=tariff_articles

# WeChat Work (WeCom) - Enterprise WeChat
WECOM_CORP_ID=your_corp_id_here
WECOM_AGENT_ID=1000001
WECOM_CORP_SECRET=your_corp_secret_here
WECOM_TO_USER=@all

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_TO=alerts@yourcompany.com

# LLM APIs (choose one or more)
OPENAI_API_KEY=sk-your-openai-key
# OR
ANTHROPIC_API_KEY=your-anthropic-key
# OR
PERPLEXITY_API_KEY=pplx-your-perplexity-key

# Telegram (optional)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# RSSHub Instance
RSSHUB_BASE_URL=https://rsshub.app

# Scraping
USER_AGENT=Mozilla/5.0 (compatible; TariffRadar/1.0)
REQUEST_DELAY=2
MAX_RETRIES=3

# Security
SECRET_KEY=your-secret-key-for-jwt-and-sessions

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_optional